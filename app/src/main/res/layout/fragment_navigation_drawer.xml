
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"

    tools:context="com.benzino.materialdesign.fragments.NavigationDrawerFragment">
    <LinearLayout
        android:id= "@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundNavigationDrawerColor">

        <ImageView
            android:layout_width="@dimen/nav_drawer_width"
            android:layout_height="@dimen/nav_drawer_image_height"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:src= "@mipmap/ic_abstract"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id= "@+id/drawerList"
        android:layout_below="@+id/container"

        android:layout_width= "match_parent"
        android:layout_height= "wrap_content">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
